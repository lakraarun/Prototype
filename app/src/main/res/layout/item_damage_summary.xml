<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/damage_summary_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_round_border_light_red"
    android:orientation="horizontal"
    android:padding="12dp"
    tools:layout_margin="8dp">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Boot lid" />

    <TextView
        android:id="@+id/text_damage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/background_semi_circular_border_red_translucent"
        android:drawableEnd="@drawable/ic_cancel_black_translucent_20dp"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_cancel_black_translucent_20dp"
        android:paddingBottom="4dp"
        android:paddingEnd="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="4dp"
        android:paddingStart="16dp"
        android:paddingTop="4dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Multiple Scratches" />
</android.support.constraint.ConstraintLayout>
